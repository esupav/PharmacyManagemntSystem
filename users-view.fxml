<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.pharmacymanagementsystem.UsersController" style="-fx-padding: 20;">
    <Label text="User Management" styleClass="header-title"/>

    <VBox styleClass="card" spacing="15">
        <Label text="All Users" styleClass="section-title"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchUserField" promptText="Search by username or role" HBox.hgrow="ALWAYS"/>
        </HBox>
        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
            <!-- Columns will be added dynamically -->
        </TableView>
    </VBox>

    <VBox styleClass="card" spacing="15">
        <Label text="Add New User" styleClass="section-title"/>
        <!-- Add user form will go here -->
    </VBox>
</VBox>
