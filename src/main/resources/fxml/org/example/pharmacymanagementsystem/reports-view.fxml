<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.pharmacymanagementsystem.ReportsController" style="-fx-padding: 20;">
    <Label text="System Reports" styleClass="header-title"/>

    <VBox styleClass="card" spacing="15">
        <Label text="Sales Report" styleClass="section-title"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="From:"/>
            <DatePicker fx:id="salesFromDate"/>
            <Label text="To:"/>
            <DatePicker fx:id="salesToDate"/>
            <Button text="Generate Sales Report" onAction="#generateSalesReport"/>
        </HBox>
        <TableView fx:id="salesReportTable" VBox.vgrow="ALWAYS">
            <!-- Columns will be added dynamically -->
        </TableView>
    </VBox>

    <VBox styleClass="card" spacing="15">
        <Label text="Inventory Report" styleClass="section-title"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Generate Inventory Report" onAction="#generateInventoryReport"/>
        </HBox>
        <TableView fx:id="inventoryReportTable" VBox.vgrow="ALWAYS">
            <!-- Columns will be added dynamically -->
        </TableView>
    </VBox>
</VBox>
